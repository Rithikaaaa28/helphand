# HelpHand Environment Configuration
# Copy this file to .env and update with your values

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production-use-random-string
DEBUG=True
FLASK_ENV=development

# Database Configuration
# SQLite (default)
DATABASE_URL=sqlite:///helphand.db

# MySQL (production)
# DATABASE_URL=mysql+pymysql://username:password@localhost/helphand

# PostgreSQL (production alternative)
# DATABASE_URL=postgresql://username:password@localhost/helphand

# Tesseract OCR Path
# Windows
TESSERACT_CMD=C:\\Program Files\\Tesseract-OCR\\tesseract.exe
# macOS/Linux
# TESSERACT_CMD=/usr/local/bin/tesseract

# Upload Settings
UPLOAD_FOLDER=app/static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Location Settings
DEFAULT_RADIUS_KM=10
FALLBACK_RADIUS_KM=50

# AI/ML Configuration
MIN_SIMILARITY_THRESHOLD=0.1
PROXIMITY_WEIGHT=0.4
SIMILARITY_WEIGHT=0.6

# Commercial Features
PLATFORM_FEE_PERCENTAGE=8
PREMIUM_VERIFICATION_FEE=99
PRO_SUBSCRIPTION_FEE=199

# Session Configuration
PERMANENT_SESSION_LIFETIME=86400  # 24 hours in seconds

# Email Configuration (for future use)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Redis Configuration (for caching - future)
# REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=helphand.log
